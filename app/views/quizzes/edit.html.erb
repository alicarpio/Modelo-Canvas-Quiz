<div class = "flex flex-col gap-3">
  <h1 class="text-xl font-bold">New Quiz</h1>
  <%= form_with model: @quiz_data url: quiz_path(@quiz_data['id']), class: "flex flex-col gap-2 ", method: :patch do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :points_possible %>
      <%= f.text_field :points_possible%>
    </div>
    <div>
      <%= f.label :time_limit %>
      <%= f.text_field :time_limit%>
    </div>
    <div>
      <%= f.label :due_at %>
      <%= f.date_field :due_at%>
    </div>
    <%= f.submit "Editar", class: "bg-blue-400 hover:bg-blue-500 text-white p-2" %>
  <% end %>
</div>